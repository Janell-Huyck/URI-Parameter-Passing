<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="URI_Parameter_Passing.SignupPage">
    <VerticalStackLayout>
        <Label 
            Text="Signup" 
            FontSize="20"
            HorizontalOptions="Center" />
        <Entry
            x:Name="UsernameEntry" 
            Text="Username" 
            FontSize="16"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="EmailEntry" 
            Text="Email" 
            FontSize="16"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="PasswordEntry" 
            Text="Password" 
            FontSize="16"
            IsPassword="True"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="ConfirmPasswordEntry" 
            Text="Confirm Password" 
            FontSize="16"
            IsPassword="True"
            HorizontalOptions="Center" />
        <Button Text="Go to Profile" Clicked="OnGoToProfileClicked" />
    </VerticalStackLayout>
</ContentPage>